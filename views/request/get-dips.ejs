<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    
        <div class="centerd">
            
                <header class="card__header">
                    <h1 class="product__price"><%= data.userId.name %></h1>
                </header>
                
                <div class="card__content">
                    <h2 class="product__title"><%= data.day %></h2>
                    <h3 class="product__title"> <%=time.from %> - <%= time.to %></h3>
                    
                </div>
                
                <div class="grid">
                    <form action="/requests/post-request/<%= time._id %> " method="post">
                        <input type="hidden" name="time" value="<%= time%>">
                        <input type="hidden" name="userId" value="616b35b6a14f4975ac34f87e" >
                        <input type="hidden" name="driverId" value="<%=data.userId._id%>" >
                        <input type="hidden" name="dateId" value="<%=data._id%>" >

                        <textarea class="product__description" name="description"></textarea>
                        <br>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button class="btn" type="submit">Request</button>
                    </form>
                    
                </div>
               
            
        </div>
        
    

<%- include('../includes/end.ejs') %>