<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    
        <h1 style="text-align: center;"><%= pageTitle %> </h1>
        <% if(errorMessage){ %>
            <div class="user-message user-message--error"><%= errorMessage %> </div>
        <% } %>  
        <div class="centered">
            <form action="/requests/special-request/<%= driverId %>" method="post">

                <div class="container centered">
                    <div class="form-control">
                        <label for="date">Day</label>
                        <input type="date" name="date" style="margin: auto; width: auto;"  min="<%= minDate %>"  required>
                    </div>
                </div>

                <div id="cardContainer" class="card-container centered">
                    
                    <div class="card" style="display: inline-block;">
                        <label for="time">From</label>
                        <input type="time" name="ftime" 
                         required> 
                        <label for="time">To</label>
                        <input type="time" name="ttime" required> 
                        
                    </div>
                    
                    <br>
                    <br>
                    <label for="description" > description: </label>
                    <br>
                    <textarea class="product__description" name="description" required></textarea>
                </div>
                
                <!-- use hidden input to send all times -->
                
                <br>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn" type="submit">Submit</button>
            </form>
        </div>

<%- include('../includes/end.ejs') %>